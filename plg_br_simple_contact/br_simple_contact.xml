<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="content" method="upgrade">
    <name>BR Simple Contact Plugin</name>
    <author>Janderson Moreira</author>
    <creationDate>February 2026</creationDate>
    <copyright>Copyright (c) 2026 Janderson Moreira. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>jandersonmm@gmail.com</authorEmail>
    <authorUrl>https://github.com/jandersk8</authorUrl>
    <version>1.0.1</version>
    <description>PLG_CONTENT_BR_SIMPLE_CONTACT_XML_DESCRIPTION</description>

    <updateservers>
        <server type="extension" priority="1" name="BR Simple Contact Updates">https://raw.githubusercontent.com/jandersk8/plg_br_simple_contact/main/update.xml</server>
    </updateservers>

    <namespace path="src">Br\Plugin\Content\SimpleContact</namespace>

    <files>
        <filename plugin="br_simple_contact">br_simple_contact.php</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
        <file>LICENSE.txt</file>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_br_simple_contact.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_br_simple_contact.sys.ini</language>
        <language tag="pt-BR">language/pt-BR/pt-BR.plg_content_br_simple_contact.ini</language>
        <language tag="pt-BR">language/pt-BR/pt-BR.plg_content_br_simple_contact.sys.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.plg_content_br_simple_contact.ini</language>
        <language tag="es-ES">language/es-ES/es-ES.plg_content_br_simple_contact.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field 
                    name="recipient_email" 
                    type="email" 
                    label="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_RECIPIENT_LABEL"
                    description="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_RECIPIENT_DESC"
                    required="true"
                    validate="email"
                />
                <field 
                    name="email_subject" 
                    type="text" 
                    default="CONTATOS PELO SITE!"
                    label="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_SUBJECT_LABEL"
                    description="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_SUBJECT_DESC"
                />
                <field 
                    name="success_message" 
                    type="textarea" 
                    default="Obrigado por entrar em contato! Responderemos o mais breve possÃ­vel!"
                    label="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_SUCCESS_MSG_LABEL"
                    description="PLG_CONTENT_BR_SIMPLE_CONTACT_FIELD_SUCCESS_MSG_DESC"
                    rows="3"
                    filter="raw"
                />
            </fieldset>
        </fields>
    </config>
</extension>